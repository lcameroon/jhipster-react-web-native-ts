{
  "name": "my-app-web-native",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "------------- WEB -------------": "",
    "start": "npm-run-all -p css:watch start:web",
    "start:web": "react-scripts-ts start",
    "css:build": "node-sass-chokidar src/scss/styles.scss src/styles.css",
    "css:watch": "npm run css:build -- --watch --skip-initial",
    "build": "NODE_ENV=production react-scripts-ts build",
    "------------- MOBILE -------------": "",
    "start:native": "react-native-scripts-ts start --reset-cache",
    "android": "react-native-scripts-ts android --reset-cache",
    "ios": "react-native-scripts-ts ios --reset-cache",
    "------------- TEST -------------": "",
    "test": "npm run test:web && npm run test:native",
    "test:native": "jest",
    "test:web": "react-scripts-ts test --env=jsdom",
    "test:web:watch": "npm run test:web -- --watch",
    "------------- MISC -------------": "",
    "analyze": "source-map-explorer build/static/js/main.*",
    "clean:web": "rimraf build",
    "clean:native": "watchman watch-del-all && rm -rf node_modules/ && npm cache verify && npm install",
    "eject:web": "react-scripts-ts eject",
    "eject:native": "react-native-scripts-ts eject",
    "precommit": "npm run test"
  },
  "main": "./node_modules/react-native-scripts-ts/build/bin/crna-entry.js",
  "dependencies": {
    "@expo/vector-icons": "^6.3.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.1",
    "@fortawesome/free-solid-svg-icons": "^5.1.1",
    "@fortawesome/react-fontawesome": "^0.1.0",
    "axios": "^0.18.0",
    "bootstrap": "^4.1.2",
    "expo": "^27.0.1",
    "native-base": "^2.7.2",
    "react": "16.3.1",
    "react-dom": "16.3.1",
    "react-hot-loader": "^4.3.3",
    "react-jhipster": "^0.5.4",
    "react-loadable": "^5.4.0",
    "react-native": "~0.55.2",
    "react-native-web": "^0.8.9",
    "react-navigation": "1.0.0-beta.21",
    "react-redux": "^5.0.7",
    "react-redux-loading-bar": "^4.0.5",
    "react-router-dom": "^4.3.1",
    "reactstrap": "^6.3.0",
    "redux": "^4.0.0",
    "redux-form": "^7.4.2",
    "redux-persist": "^5.10.0",
    "redux-promise-middleware": "^5.1.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-native": "^0.55.28",
    "@types/react-test-renderer": "^16.0.1",
    "husky": "^0.14.3",
    "jest-expo": "~27.0.0",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "react-native-scripts": "1.14.0",
    "react-native-scripts-ts": "1.15.0",
    "react-native-typescript-transformer": "^1.2.3",
    "react-scripts-ts": "2.16.0",
    "react-test-renderer": "16.3.1",
    "redux-devtools": "^3.4.1",
    "redux-devtools-dock-monitor": "^1.1.3",
    "redux-devtools-log-monitor": "^1.4.0",
    "remote-redux-devtools": "^0.5.12",
    "remote-redux-devtools-on-debugger": "^0.8.3",
    "rimraf": "^2.6.2",
    "source-map-explorer": "^1.5.0",
    "ts-jest": "^22.4.6",
    "tslib": "^1.9.1",
    "typescript": "^2.8.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "preset": "jest-expo",
    "testMatch": [
      "**/__tests__/**/*.[tj]s?(x)",
      "**/?(*.)(spec|test).[tj]s?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
